<h1 align="center">All Smartdesk Users</h1>
<% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li class="ticket-title">
                    <%= link_to user.username, user_path(user) %>
                </li>
                <li><small><%= pluralize(user.tickets.count, "ticket") if user.tickets %></small></li>
            </div>
        </div>
    </ul>
<% end %>