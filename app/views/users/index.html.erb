<h1 align="center">All Smartdesk Users</h1>
<% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li class="ticket-title">
                    <%= link_to user.username, user_path(user) %>
                </li>
                <li><small><%= pluralize(user.tickets.count, "ticket") if user.tickets %></small></li>
                <% if logged_in? and current_user.agent? %>
                <li><%= button_to "Delete this client", user_path(user), method: :delete, 
                data: { confirm: "Are you sure you want to delete this client and all the tickets?"} %></li>
                <% end %>
            </div>
        </div>
    </ul>
<% end %>