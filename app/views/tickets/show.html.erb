
<div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center"><strong><%= @ticket.title %></strong></h4>
    <hr>
    <%= simple_format(@ticket.description) %>
    <div class="article-actions">
        <%= link_to "Edit", edit_ticket_path(@ticket), class: "btn btn-xs btn-primary" %> 
        <%= link_to "Delete", ticket_path(@ticket), method: :delete, data: {confirm: "Are you sure you want to delete this ticket?"}, 
        class: "btn btn-xs btn-danger" %>
        <%= link_to "All Smartdesk Tickets", tickets_path, class: "btn btn-xs btn-success" %>
    </div>
</div>