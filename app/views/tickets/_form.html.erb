<% if @ticket.errors.any? %>
<h3>Your ticket was not created because of these errors: </h3>
<ul>
    <% @ticket.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@ticket, :html => { class: "form-horizontal", role: "form" }) do |f| %>
            <div class="form-group">
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of ticket", autofocus: true  %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Ticket Description" %>
                </div>
            </div>       
            <div class="form-group">
                <div class="col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
        <% end %>

        <%= link_to "See all Smartdesk tickets", tickets_path %>
    </div>
</div>
