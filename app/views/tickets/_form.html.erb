<%= render '/shared/errors', obj: @ticket %>
<div class='row'>
    <div class='col-xs-12'>
        <%= form_for([@category, @ticket], :html => { class: "form-horizontal", role: "form" }) do |f| %>
            <div class="form-group">
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of ticket", autofocus: true  %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Ticket Description" %>
                </div>
            </div>  
            <div class="form-group">
                <div class = "row">
                    <div class="col-sm-offset-2 col-sm-8">
                        <%= f.collection_select :category_ids, Category.all, :id, :name do |cb| %>
                        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                        <% end %>
                    </div>
                 </div>  
            </div> 
             <div class="form-group">
                <%= f.label "Ticket Complete" %>
                <%= f.check_box :complete %>
             </div>
            
            <div class="form-group">
                <div class="col-sm-10">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
        <% end %>
    </div>
</div>
