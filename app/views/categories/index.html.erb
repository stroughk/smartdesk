<h1 align="center">All Smartdesk Categories</h1>
<div align="center">
<% @categories.each do |category| %>
<ul class="listing">
    <div class="row">
        <div class="well col-md-4 col-md-offset-4">
            <li class="ticket-title">
                <%= link_to "#{category.name}", category_path(category) %>
                <li><small><%= pluralize(category.tickets.count, "ticket") %></small></li>
            </li>
        </div>
    </div>
</ul>
<% end %>
</div>