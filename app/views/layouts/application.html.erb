<!DOCTYPE html>
<html>
  <head>
    <title>Smartdesk</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
       <div class="row">
        <div class="col-md-10 col-md-offset-0">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                  <ul class="nav navbar-nav">
                      <li><%= link_to "Home", root_path %></li>
                      <% if logged_in? %> 
                        <li><%= link_to "Tickets", tickets_path %></li>
                        <li><%= link_to "Users", users_path %></li>
                         <li><%= link_to "Ticket Categories", categories_path %></li>
                        <li><%= link_to "Create a New Ticket", new_ticket_path %></li>
                        <li><%= link_to "Completed Tickets", tickets_complete_path %></li>
                            <% if current_user.agent? %>
                               <li><%= link_to "Smartdesk Agent", user_path(current_user)%></li>
                            <% else %>
                               <li><%= link_to "My Ticket", user_path(current_user) %></li>
                            <% end %>

                            <% if current_user.agent? %>
                               <li><%= link_to "Create New Smartdesk Category", new_category_path %></li>
                            <% end %>

                        <li><%= link_to "Log out", logout_path, method: :delete %></li>
                      <% else %>
                        <li><%= link_to "About", about_path %></li>
                        <li><%= link_to "Log in", login_path %></li>
                      <% end %>
                  </ul>
            </div>
          </div>
      </div>
</nav>

    <%= render 'layouts/messages' %> 
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
